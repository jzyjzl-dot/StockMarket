{
  "name": "stock-market-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/frontend",
    "build": "npm run build --workspace=packages/frontend",
    "server": "npm run dev --workspace=packages/backend",
    "devall": "pnpm -r --parallel run dev",
    "lint": "npm run lint --workspace=packages/frontend",
    "format": "npm run format --workspace=packages/frontend",
    "install:all": "npm install",
    "clean": "npm run clean --workspaces",
    "yapi:up": "docker compose -f ops/yapi/docker-compose.yml up -d",
    "yapi:down": "docker compose -f ops/yapi/docker-compose.yml down",
    "yapi:logs": "docker compose -f ops/yapi/docker-compose.yml logs -f yapi-web",
    "yapi:reset": "docker compose -f ops/yapi/docker-compose.yml down -v && docker compose -f ops/yapi/docker-compose.yml up -d"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1"
  }
}
